@model Lab4.Models.Advertisement

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h2>Brokerage @Model.BrokerTitle</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    
            <dl class="row">
                <dt class="col-sm-2">
                    FileName
                </dt>
                <dd class="col-sm-10">
                    @Model.fileName
                </dd>
                <dt class="col-sm-2">
                    ImageURL
                </dt>
                <dd class="col-sm-10">
            <img src="~/Uploads/@Model.Image" style="width: 128px;" class="img-fluid" />
                </dd>
            </dl>        
            <form asp-action="DeleteAdvertisements">
                <input type="hidden" asp-for="BrokerageID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Advertisements" asp-route-id="@Model.BrokerageID">Back to List</a>
            </form>
    
</div>