@model Lab4.Models.ViewModels.AdsViewModel


<h1>Show Ads for Brokerage @Model.Brokerages.Id</h1>


<a asp-action="UploadAdvertisements" asp-route-id="@Model.Brokerages.Id">Upload</a>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                FileName
            </th>
            <th>
                Image
            </th>
            
        </tr>
    </thead>
    @foreach(var item in Model.Advertisements)
    {
        @if(item.BrokerageID == Model.Brokerages.Id)
        {
            <tr>
                <td>
                    @item.fileName
                </td>
                <td>
                    <img src="~/Uploads/@item.Image" style="width: 128px;" class="img-fluid" />
                </td>
                <td>
                    <a asp-action="DeleteAdvertisements" asp-route-id="@item.ID" class="btn btn-danger">delete</a>
                </td>
            </tr>
        }
    }

</table>

